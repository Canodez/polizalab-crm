{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "PolizaLab CRM â€” ActivityTypesSystem DynamoDB table. Global system catalog that defines the default set of activity types available to all tenants. Composite primary key: partitionKey (PK) + code (SK).",

  "Parameters": {
    "Environment": {
      "Type": "String",
      "Default": "dev",
      "AllowedValues": ["dev", "stage", "prod"],
      "Description": "Deployment environment"
    }
  },

  "Resources": {
    "ActivityTypesSystemTable": {
      "Type": "AWS::DynamoDB::Table",

      "DeletionPolicy": "Retain",
      "UpdateReplacePolicy": "Retain",

      "Properties": {
        "TableName": {
          "Fn::Sub": "ActivityTypesSystem-${Environment}"
        },

        "BillingMode": "PAY_PER_REQUEST",

        "AttributeDefinitions": [
          { "AttributeName": "partitionKey", "AttributeType": "S" },
          { "AttributeName": "code",         "AttributeType": "S" }
        ],

        "KeySchema": [
          { "AttributeName": "partitionKey", "KeyType": "HASH" },
          { "AttributeName": "code",         "KeyType": "RANGE" }
        ],

        "PointInTimeRecoverySpecification": {
          "PointInTimeRecoveryEnabled": true
        },

        "SSESpecification": {
          "SSEEnabled": true
        },

        "Tags": [
          { "Key": "Project",     "Value": "PolizaLab" },
          { "Key": "Feature",     "Value": "ActivityTypes" },
          { "Key": "Environment", "Value": { "Ref": "Environment" } },
          { "Key": "ManagedBy",   "Value": "CloudFormation" }
        ]
      }
    }
  },

  "Outputs": {
    "TableName": {
      "Description": "Name of the ActivityTypesSystem DynamoDB table",
      "Value": { "Ref": "ActivityTypesSystemTable" },
      "Export": {
        "Name": { "Fn::Sub": "PolizaLab-ActivityTypesSystemTableName-${Environment}" }
      }
    },
    "TableArn": {
      "Description": "ARN of the ActivityTypesSystem DynamoDB table",
      "Value": { "Fn::GetAtt": ["ActivityTypesSystemTable", "Arn"] },
      "Export": {
        "Name": { "Fn::Sub": "PolizaLab-ActivityTypesSystemTableArn-${Environment}" }
      }
    }
  }
}
