{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "PolizaLab CRM â€” Leads DynamoDB table with GSIs for multi-attribute lookups. Composite primary key: tenantId (PK) + leadId (SK) mirrors the Clients and Policies table pattern.",

  "Parameters": {
    "Environment": {
      "Type": "String",
      "Default": "dev",
      "AllowedValues": ["dev", "stage", "prod"],
      "Description": "Deployment environment"
    }
  },

  "Resources": {
    "LeadsTable": {
      "Type": "AWS::DynamoDB::Table",

      "DeletionPolicy": "Retain",
      "UpdateReplacePolicy": "Retain",

      "Properties": {
        "TableName": {
          "Fn::Sub": "Leads-${Environment}"
        },

        "BillingMode": "PAY_PER_REQUEST",

        "AttributeDefinitions": [
          { "AttributeName": "tenantId",         "AttributeType": "S" },
          { "AttributeName": "leadId",            "AttributeType": "S" },
          { "AttributeName": "userId",            "AttributeType": "S" },
          { "AttributeName": "createdAt",         "AttributeType": "S" },
          { "AttributeName": "status",            "AttributeType": "S" },
          { "AttributeName": "assignedToUserId",  "AttributeType": "S" },
          { "AttributeName": "nextActionAt",      "AttributeType": "S" },
          { "AttributeName": "phone",             "AttributeType": "S" }
        ],

        "KeySchema": [
          { "AttributeName": "tenantId", "KeyType": "HASH" },
          { "AttributeName": "leadId",   "KeyType": "RANGE" }
        ],

        "GlobalSecondaryIndexes": [
          {
            "IndexName": "userId-createdAt-index",
            "KeySchema": [
              { "AttributeName": "userId",    "KeyType": "HASH" },
              { "AttributeName": "createdAt", "KeyType": "RANGE" }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            }
          },

          {
            "IndexName": "tenantId-status-index",
            "KeySchema": [
              { "AttributeName": "tenantId", "KeyType": "HASH" },
              { "AttributeName": "status",   "KeyType": "RANGE" }
            ],
            "Projection": {
              "ProjectionType": "INCLUDE",
              "NonKeyAttributes": ["leadId", "userId", "firstName", "lastName", "createdAt", "assignedToUserId", "nextActionAt"]
            }
          },

          {
            "IndexName": "assignedTo-nextAction-index",
            "KeySchema": [
              { "AttributeName": "assignedToUserId", "KeyType": "HASH" },
              { "AttributeName": "nextActionAt",     "KeyType": "RANGE" }
            ],
            "Projection": {
              "ProjectionType": "INCLUDE",
              "NonKeyAttributes": ["leadId", "tenantId", "firstName", "lastName", "status", "phone"]
            }
          },

          {
            "IndexName": "phone-index",
            "KeySchema": [
              { "AttributeName": "tenantId", "KeyType": "HASH" },
              { "AttributeName": "phone",    "KeyType": "RANGE" }
            ],
            "Projection": {
              "ProjectionType": "INCLUDE",
              "NonKeyAttributes": ["leadId", "userId", "firstName", "lastName", "status"]
            }
          }
        ],

        "PointInTimeRecoverySpecification": {
          "PointInTimeRecoveryEnabled": true
        },

        "SSESpecification": {
          "SSEEnabled": true
        },

        "Tags": [
          { "Key": "Project",     "Value": "PolizaLab" },
          { "Key": "Feature",     "Value": "Leads" },
          { "Key": "Environment", "Value": { "Ref": "Environment" } },
          { "Key": "ManagedBy",   "Value": "CloudFormation" }
        ]
      }
    }
  },

  "Outputs": {
    "TableName": {
      "Description": "Name of the Leads DynamoDB table",
      "Value": { "Ref": "LeadsTable" },
      "Export": {
        "Name": { "Fn::Sub": "PolizaLab-LeadsTableName-${Environment}" }
      }
    },
    "TableArn": {
      "Description": "ARN of the Leads DynamoDB table",
      "Value": { "Fn::GetAtt": ["LeadsTable", "Arn"] },
      "Export": {
        "Name": { "Fn::Sub": "PolizaLab-LeadsTableArn-${Environment}" }
      }
    }
  }
}
