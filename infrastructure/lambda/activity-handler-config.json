{
  "_comment": "Lambda function configuration for polizalab-activity-handler. Mirrors the runtime and patterns used by lead-handler (Python 3.12, handler.handler). The deploy-activities.sh script reads this file to create or update the function.",

  "functionName": "polizalab-activity-handler",
  "description": "Handles all CRUD operations for Activities in PolizaLab CRM",

  "runtime": "python3.12",
  "handler": "handler.handler",
  "memorySize": 256,
  "timeout": 30,

  "architectures": ["x86_64"],

  "packageType": "Zip",
  "codeS3Bucket": "${ARTIFACTS_BUCKET}",
  "codeS3Key": "${ARTIFACTS_KEY}",

  "environment": {
    "Variables": {
      "ACTIVITIES_TABLE": "Activities",
      "SYSTEM_TABLE":     "ActivityTypesSystem",
      "TENANT_ID":        "default",
      "ALLOWED_ORIGIN":   "https://crm.antesdefirmar.org",
      "LOG_LEVEL":        "INFO"
    }
  },

  "tracingConfig": {
    "Mode": "Active"
  },

  "reservedConcurrentExecutions": 50,

  "layers": [],

  "loggingConfig": {
    "logFormat": "JSON",
    "applicationLogLevel": "INFO",
    "systemLogLevel": "WARN",
    "logGroup": "/aws/lambda/polizalab-activity-handler"
  },

  "tags": {
    "Project":   "PolizaLab",
    "Feature":   "Activities",
    "ManagedBy": "deploy-activities.sh"
  }
}
