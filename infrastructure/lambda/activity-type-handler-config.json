{
  "_comment": "Lambda function configuration for polizalab-activity-type-handler. Mirrors the runtime and patterns used by lead-handler (Python 3.12, handler.handler). The deploy-activity-types.sh script reads this file to create or update the function.",

  "functionName": "polizalab-activity-type-handler",
  "description": "Handles activity type catalog management for PolizaLab CRM",

  "runtime": "python3.12",
  "handler": "handler.handler",
  "memorySize": 256,
  "timeout": 30,

  "architectures": ["x86_64"],

  "packageType": "Zip",
  "codeS3Bucket": "${ARTIFACTS_BUCKET}",
  "codeS3Key": "${ARTIFACTS_KEY}",

  "environment": {
    "Variables": {
      "SYSTEM_TABLE":    "ActivityTypesSystem",
      "TENANT_TABLE":    "ActivityTypesTenant",
      "TENANT_ID":       "default",
      "ALLOWED_ORIGIN":  "https://crm.antesdefirmar.org",
      "LOG_LEVEL":       "INFO"
    }
  },

  "tracingConfig": {
    "Mode": "Active"
  },

  "reservedConcurrentExecutions": 50,

  "layers": [],

  "loggingConfig": {
    "logFormat": "JSON",
    "applicationLogLevel": "INFO",
    "systemLogLevel": "WARN",
    "logGroup": "/aws/lambda/polizalab-activity-type-handler"
  },

  "tags": {
    "Project":   "PolizaLab",
    "Feature":   "ActivityTypes",
    "ManagedBy": "deploy-activity-types.sh"
  }
}
