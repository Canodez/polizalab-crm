{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "PolizaLab CRM â€” Least-privilege IAM role and inline policy for the client-handler Lambda. Grants access only to the Clients table (all GSIs), read-only access to the Policies table for linking, CloudWatch Logs, and X-Ray tracing.",

  "Parameters": {
    "Environment": {
      "Type": "String",
      "Default": "dev",
      "AllowedValues": ["dev", "stage", "prod"],
      "Description": "Deployment environment"
    }
  },

  "Resources": {
    "ClientHandlerRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Sub": "polizalab-client-handler-role-${Environment}"
        },
        "Description": "Execution role for the polizalab-client-handler Lambda function",

        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },

        "Policies": [
          {
            "PolicyName": "ClientHandlerPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [

                {
                  "Sid": "ClientsTableReadWrite",
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:GetItem",
                    "dynamodb:PutItem",
                    "dynamodb:UpdateItem",
                    "dynamodb:DeleteItem",
                    "dynamodb:Query"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Clients-${Environment}"
                    },
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Clients-${Environment}/index/email-index"
                    },
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Clients-${Environment}/index/rfc-index"
                    },
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Clients-${Environment}/index/phone-index"
                    },
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Clients-${Environment}/index/userId-createdAt-index"
                    }
                  ]
                },

                {
                  "Sid": "PoliciesTableReadForLinking",
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:GetItem",
                    "dynamodb:UpdateItem",
                    "dynamodb:Query"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Policies"
                    },
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Policies/index/userId-createdAt-index"
                    }
                  ]
                },

                {
                  "Sid": "CloudWatchLogs",
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/polizalab-client-handler-${Environment}:*"
                  }
                },

                {
                  "Sid": "XRayTracing",
                  "Effect": "Allow",
                  "Action": [
                    "xray:PutTraceSegments",
                    "xray:PutTelemetryRecords"
                  ],
                  "Resource": "*"
                }

              ]
            }
          }
        ],

        "Tags": [
          { "Key": "Project",     "Value": "PolizaLab" },
          { "Key": "Feature",     "Value": "Clients" },
          { "Key": "Environment", "Value": { "Ref": "Environment" } },
          { "Key": "ManagedBy",   "Value": "CloudFormation" }
        ]
      }
    }
  },

  "Outputs": {
    "RoleArn": {
      "Description": "ARN of the client-handler IAM execution role",
      "Value": { "Fn::GetAtt": ["ClientHandlerRole", "Arn"] },
      "Export": {
        "Name": { "Fn::Sub": "PolizaLab-ClientHandlerRoleArn-${Environment}" }
      }
    },
    "RoleName": {
      "Description": "Name of the client-handler IAM execution role",
      "Value": { "Ref": "ClientHandlerRole" },
      "Export": {
        "Name": { "Fn::Sub": "PolizaLab-ClientHandlerRoleName-${Environment}" }
      }
    }
  }
}
