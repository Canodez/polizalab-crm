{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "PolizaLab CRM â€” Least-privilege IAM role and inline policy for the activity-handler Lambda. Grants full read/write access to the Activities table (all GSIs), read access to the ActivityTypesSystem table for tipoCodigo validation, CloudWatch Logs, and X-Ray tracing.",

  "Parameters": {
    "Environment": {
      "Type": "String",
      "Default": "dev",
      "AllowedValues": ["dev", "stage", "prod"],
      "Description": "Deployment environment"
    }
  },

  "Resources": {
    "ActivityHandlerRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Sub": "polizalab-activity-handler-role-${Environment}"
        },
        "Description": "Execution role for the polizalab-activity-handler Lambda function",

        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },

        "Policies": [
          {
            "PolicyName": "ActivityHandlerPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [

                {
                  "Sid": "ActivitiesTableReadWrite",
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:GetItem",
                    "dynamodb:PutItem",
                    "dynamodb:UpdateItem",
                    "dynamodb:DeleteItem",
                    "dynamodb:Query"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Activities-${Environment}"
                    },
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Activities-${Environment}/index/assignedTo-dueDate-index"
                    },
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Activities-${Environment}/index/entity-index"
                    },
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Activities-${Environment}/index/assignedTo-scheduledAt-index"
                    },
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Activities-${Environment}/index/tenantId-status-index"
                    }
                  ]
                },

                {
                  "Sid": "ActivityTypesSystemTableRead",
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:GetItem",
                    "dynamodb:Query"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/ActivityTypesSystem-${Environment}"
                    }
                  ]
                },

                {
                  "Sid": "CloudWatchLogs",
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/polizalab-activity-handler-${Environment}:*"
                  }
                },

                {
                  "Sid": "XRayTracing",
                  "Effect": "Allow",
                  "Action": [
                    "xray:PutTraceSegments",
                    "xray:PutTelemetryRecords"
                  ],
                  "Resource": "*"
                }

              ]
            }
          }
        ],

        "Tags": [
          { "Key": "Project",     "Value": "PolizaLab" },
          { "Key": "Feature",     "Value": "Activities" },
          { "Key": "Environment", "Value": { "Ref": "Environment" } },
          { "Key": "ManagedBy",   "Value": "CloudFormation" }
        ]
      }
    }
  },

  "Outputs": {
    "RoleArn": {
      "Description": "ARN of the activity-handler IAM execution role",
      "Value": { "Fn::GetAtt": ["ActivityHandlerRole", "Arn"] },
      "Export": {
        "Name": { "Fn::Sub": "PolizaLab-ActivityHandlerRoleArn-${Environment}" }
      }
    },
    "RoleName": {
      "Description": "Name of the activity-handler IAM execution role",
      "Value": { "Ref": "ActivityHandlerRole" },
      "Export": {
        "Name": { "Fn::Sub": "PolizaLab-ActivityHandlerRoleName-${Environment}" }
      }
    }
  }
}
