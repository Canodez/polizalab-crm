{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "PolizaLab CRM â€” Least-privilege IAM role and inline policy for the renewal-checker Lambda. Grants read access to the Policies table for expiration scanning, write access to the Activities table (including entity-index GSI) for auto-activity creation, CloudWatch Logs, and X-Ray tracing.",

  "Parameters": {
    "Environment": {
      "Type": "String",
      "Default": "dev",
      "AllowedValues": ["dev", "stage", "prod"],
      "Description": "Deployment environment"
    }
  },

  "Resources": {
    "RenewalCheckerRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Sub": "polizalab-renewal-checker-role-${Environment}"
        },
        "Description": "Execution role for the polizalab-renewal-checker Lambda function",

        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },

        "Policies": [
          {
            "PolicyName": "RenewalCheckerPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [

                {
                  "Sid": "PoliciesTableRead",
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:Scan",
                    "dynamodb:GetItem",
                    "dynamodb:Query"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Policies-${Environment}"
                    }
                  ]
                },

                {
                  "Sid": "ActivitiesTableWrite",
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:PutItem",
                    "dynamodb:Query"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Activities-${Environment}"
                    },
                    {
                      "Fn::Sub": "arn:aws:dynamodb:${AWS::Region}:${AWS::AccountId}:table/Activities-${Environment}/index/entity-index"
                    }
                  ]
                },

                {
                  "Sid": "CloudWatchLogs",
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": {
                    "Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/polizalab-renewal-checker-${Environment}:*"
                  }
                },

                {
                  "Sid": "XRayTracing",
                  "Effect": "Allow",
                  "Action": [
                    "xray:PutTraceSegments",
                    "xray:PutTelemetryRecords"
                  ],
                  "Resource": "*"
                }

              ]
            }
          }
        ],

        "Tags": [
          { "Key": "Project",     "Value": "PolizaLab" },
          { "Key": "Feature",     "Value": "Renewals" },
          { "Key": "Environment", "Value": { "Ref": "Environment" } },
          { "Key": "ManagedBy",   "Value": "CloudFormation" }
        ]
      }
    }
  },

  "Outputs": {
    "RoleArn": {
      "Description": "ARN of the renewal-checker IAM execution role",
      "Value": { "Fn::GetAtt": ["RenewalCheckerRole", "Arn"] },
      "Export": {
        "Name": { "Fn::Sub": "PolizaLab-RenewalCheckerRoleArn-${Environment}" }
      }
    },
    "RoleName": {
      "Description": "Name of the renewal-checker IAM execution role",
      "Value": { "Ref": "RenewalCheckerRole" },
      "Export": {
        "Name": { "Fn::Sub": "PolizaLab-RenewalCheckerRoleName-${Environment}" }
      }
    }
  }
}
